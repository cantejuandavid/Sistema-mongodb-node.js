extends layout

block content
	script(src='/javascripts/scriptCreateUser.js')
	#container.container.contenedor
		form(id='createUser',name='createUser', action='/createUser', method='post', class='row')
			#contentFieldset.col-sm-4.col-md-offset-4.login
				fieldset
					legend Crear Usuario
					p
						label Usuario
						input(id='user').form-control.input-sm
					p
						label Contraseña
						input(type='password',id='pass',required).form-control.input-sm
					p
						label Nombre
						input(id='name',required).form-control.input-sm
					p
						label Cédula
						input(id='ced',required).form-control.input-sm
					p
						label Jefe
						input(value='juan',id='jefe',required).form-control.input-sm
					p
						label Tipo
						select(id='tipo').form-control.input-sm
							option(value='o')='Empleado'
							option(value='a')='Empleada'
							option(value='j')='Jefe'
					p
						input(type='submit',value='Registrar', class='btn btn-primary')
				a(href='../')='Login'			
				#alert.alert.alert-danger=''	